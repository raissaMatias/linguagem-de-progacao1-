    public void acelerar(double incremento) {
        if (incremento > 0) {
            velocidade += incremento;
            System.out.println("O carro acelerou. Velocidade atual: " + velocidade + " km/h.");
        } else {
            System.out.println("O incremento deve ser positivo para acelerar.");
        }
